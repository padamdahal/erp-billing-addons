<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
        <record id="view_discount_head_report" model="ir.ui.view">
            <field name="name">discount.head.report.wizard</field>
            <field name="model">discount.head.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Discount Head Report" version="7.0">
                    <group col='4'>
                        <field name="start_date" class="oe_inline" />
                        <field name="shop_id" class="oe_inline" widget="selection"/>
                        <field name="end_date" class="oe_inline"/>
                    </group>                
                    <footer>
                        <button string="Print PDF" name="print_report" type="object" class="oe_highlight"/>
                        or
                        <button string="Print Excel" name="print_excel_report" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
               </form>
            </field>
        </record>

        <record id="action_discount_head_report" model="ir.actions.act_window">
            <field name="name">Discount Head Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">discount.head.report.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_discount_head_report"/>
            <field name="target">new</field>
            <field name="multi">True</field>
        </record>
        
       	
       	<menuitem action="action_discount_head_report" id="menu_discount_head_report" 
       		parent="account.menu_finance_bank_and_cash"
        	name="Discount Head Report" sequence="110"/>

    </data>
</openerp>
